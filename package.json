{
  "name": "termdle",
  "version": "1.0.2",
  "description": "A fully-featured Wordle clone that runs entirely in your terminal! Built with TypeScript, React, and Ink.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "bin": {
    "termdle": "./cli.js"
  },
  "files": [
    "dist/**/*",
    "cli.js"
  ],
  "keywords": [
    "wordle",
    "terminal",
    "cli",
    "game",
    "react",
    "ink",
    "typescript",
    "puzzle",
    "word-game"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k-dang/termdle.git"
  },
  "scripts": {
    "start": "bun run src/cli/index.tsx",
    "dev": "bun --watch run src/cli/index.tsx",
    "build": "bun build src/cli/index.tsx --outdir=dist --target=node --minify",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "dependencies": {
    "ink": "^6.0.1",
    "ink-gradient": "^3.0.0",
    "jotai": "^2.12.5",
    "react": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/bun": "latest",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "react-devtools-core": "^6.1.5",
    "typescript-eslint": "^8.38.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
